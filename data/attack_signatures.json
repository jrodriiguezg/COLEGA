[
    {
        "id": "ssh_bruteforce",
        "name": "Intento de Fuerza Bruta SSH",
        "source": "log_auth",
        "pattern": "Failed password for",
        "window_seconds": 60,
        "threshold": 5
    },
    {
        "id": "high_cpu",
        "name": "CPU Crítica (>90%)",
        "source": "system_stats",
        "metric": "cpu_percent",
        "window_seconds": 30,
        "threshold": 3
    },
    {
        "id": "high_ram",
        "name": "Memoria Crítica (>95%)",
        "source": "system_stats",
        "metric": "memory_percent",
        "window_seconds": 60,
        "threshold": 5
    },
    {
        "id": "sudo_abuse",
        "name": "Uso sospechoso de SUDO",
        "source": "log_auth",
        "pattern": "sudo: pam_unix(sudo:auth): authentication failure",
        "window_seconds": 300,
        "threshold": 3
    }
]
